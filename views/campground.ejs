<%- include ('partials/header') %> 
<div class="container-fluid">
    <header class="jumbotron">
    <div class="container-fluid">
        <h1>Welcome to CampGround</h1>
        <p>
        <a class="btn btn-primary btn-lg" href="/campground/new">Click to add new campground</a>
        </p>
    </div>
    </header>
    <div class="container">
        <div class="row text-center" style="display:flex;flex-wrap:wrap;">
        
            <% campgrounds.forEach((campground)=>{ %>
                <div class="col-lg-4 col-md-4 col-sm-4 col-12">

                    <div class="card" style="width: 350px;">
                        <img src="<%= campground.image %>" alt="#" class="card-img" height="320px"/>
                        <div class="card-body">
                            <h3 class="card-title text-center" style="color: blueviolet;"><%= campground.name %> </h3>
                            <p class="card-text text-center"><%= campground.desc %> </p>
                            <a href="/campground/<%= campground._id %> " class="btn btn-primary">View details</a>
                        </div>
                    
                    </div>
                </div>
                <br>
                <br>
            <% }); %> 
        </div>
    </div>

    
    
</div>
<%- include ('partials/footer') %> 